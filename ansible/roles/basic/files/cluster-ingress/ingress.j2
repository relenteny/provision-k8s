controller:
  ingressClass: "{{ cluster_ingress_class }}"
  hostNetwork: true
  dnsPolicy: ClusterFirstWithHostNet
  extraArgs:
    enable-ssl-passthrough: ""

  metrics:
    enabled: true

  admissionWebhooks:
    enabled: false

  service:
    type: NodePort

  image:
    allowPrivilegeEscalation: true

ingress:
  host: "{{ cluster_hostname }}"
